<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MySARAssist.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MySARAssist"
    xmlns:views="clr-namespace:MySARAssist.Views"
    Shell.BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
    Shell.FlyoutBackdrop="Silver"
    Title="My SAR Assist">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="{StaticResource Tertiary}"
                  HeightRequest="200">
                <Image Aspect="AspectFill"
                       Source="sar_command_assist_logo.png"
                       Opacity="0.6" />
                
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <FlyoutItem Title="Home" Icon="house_icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Icon="house_icon.png" Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Calculators" Icon="calculator_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:CalculatorsView}" Icon="calculaor_icon.png" Route="CalculatorsView"></ShellContent>
        
    </FlyoutItem>

    <FlyoutItem Title="Check In / Out" Icon="clock_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:CheckInOut.CheckInOutView}" Route="CheckInOutView"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="RADeMS Risk Assessment" Icon="radems_grid_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:RADeMSView}" Route="RADeMSView"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="About My SAR Assist"  Icon="icon_about.png">
        <ShellContent ContentTemplate="{DataTemplate views:AboutView}" Route="AboutView"></ShellContent>
    </FlyoutItem>
</Shell>
